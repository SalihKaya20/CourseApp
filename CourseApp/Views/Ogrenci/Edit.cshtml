@model Ogrenci
@{
    ViewData["Title"] = "Edit";
}

<h2>Öğrenci Bilgilerini Güncelle</h2>
<hr> 

<div class="row">
    
<div class="col-8">
    <form asp-controller="Ogrenci" asp-action="Edit" method="post">
        <input type="hidden" asp-for="OgrenciId">
        <div class="mb-3">
            <label asp-for="OgreciAd" class="form-label">Öğrenci Adı</label>
            <input asp-for="OgreciAd" class="form-control"> 
        </div>
        <div class="mb-3">
            <label asp-for="OgreciSoyad" class="form-label">Öğrenci Soyadı</label>
            <input asp-for="OgreciSoyad" class="form-control"> 
        </div>
        <div class="mb-3">
            <label asp-for="Eposta" class="form-label">E-Posta</label>
            <input asp-for="Eposta" class="form-control"> 
        </div>
        <div class="mb-3">
            <label asp-for="Telefon" class="form-label">Telefon Numarası</label>
            <input asp-for="Telefon" class="form-control"> 
        </div>
        
        <button type="submit" class="btn btn-primary" >Kaydet</button>
        
    
    </form>
</div>


<div class="col-4">
    <h4>Kurslar</h4>
    <hr>
    <ul>
        @foreach(var item in @Model.KursKayitlari)
        {
            <li>@item.Kurs.Baslik</li>
        }
    </ul>

</div>










</div>



