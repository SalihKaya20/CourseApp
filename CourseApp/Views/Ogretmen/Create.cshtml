@model Ogretmen

@{
    ViewData["Title"] = "Öğretmen Ekle";
}

<h2>Öğrenci Ekle</h2>
<hr>    
<form asp-controller="Ogretmen" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgretmenAd" class="form-label">Öğretmen Adı</label>
        <input asp-for="OgretmenAd" class="form-control"> 
    </div>
    <div class="mb-3">
        <label asp-for="OgretmenSoyad" class="form-label">Öğretmen Soyadı</label>
        <input asp-for="OgretmenSoyad" class="form-control"> 
    </div>
    <div class="mb-3">
        <label asp-for="Eposta" class="form-label">E-Posta</label>
        <input asp-for="Eposta" class="form-control"> 
    </div>
    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Telefon Numarası</label>
        <input asp-for="Telefon" class="form-control"> 
    </div>
    <div class="mb-3">
        <label asp-for="BaslamaTarihi" class="form-label">Başlama Tarihi</label>
        <input asp-for="BaslamaTarihi" class="form-control"> 
    </div>
    
    
    <button type="submit" class="btn btn-primary" >Kaydet</button>
</div>

    


</form>
