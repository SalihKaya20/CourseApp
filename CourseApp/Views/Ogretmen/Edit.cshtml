@model Ogretmen
@{
    ViewData["Title"] = "Edit";
}

<h2>Öğretmen Bilgilerini Güncelle</h2>
<hr> 

<div class="row">
    
<div class="col-8">
    <form asp-controller="Ogretmen" asp-action="Edit" method="post">
        <input type="hidden" asp-for="OgretmenId">
        <div class="mb-3">
            <label asp-for="OgretmenAd" class="form-label">Ogretmen Adı</label>
            <input asp-for="OgretmenAd" class="form-control"> 
        </div>
        <div class="mb-3">
            <label asp-for="OgretmenSoyad" class="form-label">Ogretmen Soyadı</label>
            <input asp-for="OgretmenSoyad" class="form-control"> 
        </div>
        <div class="mb-3">
            <label asp-for="Eposta" class="form-label">E-Posta</label>
            <input asp-for="Eposta" class="form-control"> 
        </div>
        <div class="mb-3">
            <label asp-for="Telefon" class="form-label">Telefon Numarası</label>
            <input asp-for="Telefon" class="form-control"> 
        </div>
        <div class="mb-3">
            <label asp-for="BaslamaTarihi" class="form-label">Başlama Tarihi</label>
            <input asp-for="BaslamaTarihi" class="form-control"> 
        </div>
        
        
        <button type="submit" class="btn btn-primary" >Kaydet</button>
        
    
    </form>
</div>


<div class="col-4">
    <h4>Kurslar</h4>
    <hr>
    <ul>
        @foreach(var item in @Model.Kurslar)
        {
            <li>@item.Baslik</li>
        }
    </ul>

</div>










</div>



